<script>
  const phrases = [
    "ACariciar mil gatos es conocer tu alma\n\n Somos locxs rebeldes\nloco de estar a tu lado\nsos maravillosa\extra√±amente perfecta, brillante",
    "Te amo cari√±o",
    "Feliz 14 de febrero guapaüë©üèª‚Äç‚ù§Ô∏è‚Äçüíã‚Äçüë©üèΩ",
    "¬¥Despu√©s de tanto, qu√© gusto estar vivxs, y juntxs¬¥",
    "Te quiero con la eternidad que nos concede la brevedad de tantos momentos inolvidables.",
    "¬°Ay, Amor! No cabe duda: ¬°tu amor es una cosa esplendorosa!",
    "Seamos la llama que caliente, siempre."
  ];

  const images = [
    "1.JPG",
    "2.JPG",
    "4.JPG",
    "5.JPG",
    "6.JPG",
    "7.JPG",
    "8.JPG",
    "9.JPG"
 
  ];

  const phraseEl = document.getElementById("phrase");
  const imageEl = document.getElementById("vibeImage");

  // ESTADO INICIAL EST√Å MOSTRANDO EL TEXTO
  let showing = "text";
  imageEl.style.display = "none";

  function changeVibe() {
    if (showing === "text") {
      // ocultar el texto
      phraseEl.style.display = "none";

      // mostrar imagen
      imageEl.src = images[Math.floor(Math.random() * images.length)];
      imageEl.style.display = "block";

      showing = "image";
    } else {
      // ocultar imagen
      imageEl.style.display = "none";

      // mostrar texto
      phraseEl.textContent =
        phrases[Math.floor(Math.random() * phrases.length)];
      phraseEl.style.display = "block";

      showing = "text";
    }
  }
</script>

